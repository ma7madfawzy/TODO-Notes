<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TempoNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
<!--        used to enable shared elements animation -->
        <item name="android:textDirection">locale</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.TempoNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Launcher" parent="Theme.TempoNews">
        <item name="android:windowBackground">@color/colorPrimaryVariant</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="Theme.TempoNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TempoNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>